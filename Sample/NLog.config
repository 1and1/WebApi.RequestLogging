<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true">
  <targets>
    <target name="ApiRequestLogFile" xsi:type="File" concurrentWrites="true"
            fileName="C:\LogFiles\RequestLoggingSample\ApiRequest.log"
            archiveFileName="C:\LogFiles\RequestLoggingSample\archive\ApiRequest-{#}.log"
            archiveEvery="Day" archiveNumbering="DateAndSequence" maxArchiveFiles="7" />
    <target name="Console" xsi:type="Console" />
  </targets>

  <rules>
    <logger name="ApiRequest" minlevel="Debug" writeTo="ApiRequestLogFile,Console" />
  </rules>
</nlog>
